{
    "name": "@primitivefi/contracts",
    "version": "0.4.2",
    "description": "Primitive options protocol contracts.",
    "files": [
        "artifacts",
        "contracts",
        "deployments"
    ],
    "scripts": {
        "task:remove-build": "rimraf build",
        "task:remove-lock": "rimraf yarn.lock",
        "task:remove-modules": "rimraf node_modules",
        "task:install": "yarn",
        "clean-install": "npm-run-all task:remove-build task:remove-lock task:remove-modules task:install",
        "task:clean": "buidler clean",
        "task:compile": "buidler compile",
        "compile": "npm-run-all task:clean task:compile",
        "coverage": "buidler clean && buidler compile && buidler coverage --network coverage",
        "lint": "cross-env buidler check",
        "lint:fix": "solium -d contracts --fix",
        "venv": "virtualenv .venv",
        "slither": "pip install slither-analyzer && slither .",
        "bevm": "buidler node",
        "test": "cross-env buidler test ./test/test_trader.spec.js ./test/test_option.spec.js ./test/test_flash.spec.js ./test/test_weth_connector.spec.js ./test/test_uni_connector.spec.js",
        "test:periphery": "cross-env buidler test ./test/test_trader.spec.js ./test/test_weth_connector.spec.js ./test/test_uni_connector.spec.js",
        "test:local": "cross-env buidler test --network local ./test/test_trader.spec.js ./test/test_option.spec.js ./test/test_flash.spec.js",
        "deploy:local": "cross-env buidler deploy --network local",
        "deploy:rinkeby": "cross-env buidler deploy --network rinkeby",
        "deploy-periphery:rinkeby": "cross-env buidler deploy --network rinkeby --tags Periphery",
        "deploy-core:rinkeby": "cross-env buidler deploy --network rinkeby --tags Core",
        "deploy:mainnet": "cross-env buidler deploy --network live --tags Core Periphery",
        "deploy-options:rinkeby": "cross-env buidler run ./scripts/deploy_rinkeby_options.js --network rinkeby",
        "deploy-options:mainnet": "cross-env buidler run ./scripts/deploy_options.js --network live",
        "deploy-pairs:rinkeby": "cross-env buidler run ./scripts/deploy_uniswap_pairs.js --network rinkeby",
        "deploy-short-pairs:rinkeby": "cross-env buidler run ./scripts/deploy_uniswap_pairs_short.js --network rinkeby",
        "verify:rinkeby": "cross-env buidler run ./scripts/verify.js --network rinkeby",
        "verify:mainnet": "cross-env buidler run ./scripts/verify.js --network live",
        "deploy-testnet": "npm-run-all deploy:rinkeby verify:rinkeby deploy-options:rinkeby deploy-pairs:rinkeby",
        "deploy-mainnet": "npm-run-all deploy:mainnet verify:mainnet"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/primitivefinance/primitive-contracts.git"
    },
    "keywords": [
        "defi",
        "ethereum",
        "primitive",
        "solidity",
        "options"
    ],
    "author": "Primitive",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/primitivefinance/primitive-contracts/issues"
    },
    "homepage": "https://primitive.finance",
    "devDependencies": {
        "@nomiclabs/buidler": "^1.3.2",
        "@nomiclabs/buidler-ethers": "^2.0.0",
        "@nomiclabs/buidler-etherscan": "2.1.0",
        "@nomiclabs/buidler-solhint": "^1.3.3",
        "@nomiclabs/buidler-waffle": "^2.0.0",
        "@openzeppelin/contracts": "3.0.1",
        "@truffle/hdwallet-provider": "^1.0.35",
        "@uniswap/v2-core": "^1.0.1",
        "@uniswap/v2-periphery": "^1.1.0-beta.0",
        "bip39": "^3.0.2",
        "bn.js": "^5.1.1",
        "buidler-deploy": "^0.5.8",
        "buidler-gas-reporter": "^0.1.3",
        "buidler-spdx-license-identifier": "^1.0.2",
        "canonical-weth": "^1.4.0",
        "chai": "^4.2.0",
        "chai-bn": "^0.2.1",
        "cross-env": "^7.0.2",
        "dotenv": "^8.2.0",
        "ethereum-waffle": "^3.0.1",
        "ethers": "^5.0.4",
        "mocha": "^7.1.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "prettier-plugin-solidity": "^1.0.0-alpha.54",
        "rimraf": "^3.0.2",
        "solc": "^0.6.8",
        "solidity-coverage": "^0.7.9",
        "solium": "^1.2.5",
        "web3": "^1.2.7"
    },
    "dependencies": {},
    "publishConfig": {
        "access": "public"
    },
    "gitHead": "c50308617c3c6ecb51b45527c55c4c7045daa2fc"
}
